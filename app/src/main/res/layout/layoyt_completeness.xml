<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@drawable/behind_background"
android:scrollbars="none">
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="本次训练：未完成"
        android:textSize="25dp"
        android:textColor="#383838"/>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预期效果"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:background="@drawable/border"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提高力量，锻炼部位：肱肌与斜方肌上束。"
        android:textColor="@color/black"
        android:textSize="15dp"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已完成"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:background="@drawable/border"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="0dp" />

        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp" />

        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="0dp" />

        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp" />

        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="0dp" />

        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp" />

        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_10"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="0dp" />

        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp" />

        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_12"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_13"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="0dp" />

        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_14"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp" />

        <fruitbasket.com.bodyfit.ui.CircleProgressView
            android:id="@+id/circle_15"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp" />
    </LinearLayout>
</LinearLayout>
</ScrollView>
