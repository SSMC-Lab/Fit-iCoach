<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/touxiang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/society_headcul"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="17dp"
        android:textColor="@color/society_name"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/society_headcul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/name"
        android:layout_toEndOf="@+id/society_headcul" />

    <TextView
        android:textColor="@color/society_content"
        android:layout_alignLeft="@+id/name"
        android:layout_marginTop="10dp"
        android:maxWidth="270dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/content"
        android:layout_below="@+id/name"
        android:layout_toEndOf="@+id/society_headcul" />

    <fruitbasket.com.bodyfit.ui.MyGridView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="3"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="4dp"
        android:id="@+id/picture"
        android:layout_below="@+id/content"
        android:layout_alignLeft="@+id/content"
        android:layout_marginTop="10dp" />

    <TextView
        android:textSize="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/picture"
        android:layout_below="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1小时前"
        android:id="@+id/society_time"
         />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_marginRight="10dp"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:text="评"
        android:id="@+id/society_comment"
        android:layout_alignTop="@+id/society_time"
        android:layout_alignParentEnd="true" />


</RelativeLayout>